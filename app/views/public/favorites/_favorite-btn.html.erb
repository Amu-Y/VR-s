<% if m.favorited_by?(current_user) %>
  <%= link_to message_favorites_path(m), method: :delete, remote: true do %>
    <i class="fas fa-heart text-danger"></i><%= m.favorites.count %>
  <% end %>
<% else %>
  <%= link_to message_favorites_path(m), method: :post, remote: true do %>
    <i class="fas fa-heart"></i><%= m.favorites.count %>
  <% end %>
<% end %>