<header class="contents__header">
  <%= render 'layouts/header' %>
</header>
<article class="user">
  <section class="user__content">
    <h1>
      User info
      </h1>
      <%= form_with model:@user, local:true do |f| %>
      　<!--nameのtextbox-->
        <div class="user__textbox">
          <div class="user__textbox_paragraph">
            <label class="user__textbox_label">
              Name
              </label>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "user__textbox_body" %>
          </div>
        </div>
        <!--アイコン投稿-->
        <div class="all__inner_text">
          <label for="user_image">
            Image
            </label>
          <%= f.attachment_field :icon, placeholder: "プロフィール画像", class: "form-control-file user_image" %>
        </div>
        <!--introductionのtextbox-->
        <div class="user__textbox">
          <div class="user__textbox_paragraph">
            <label class="user__textbox_label">
              Introduction
              </label>
            <%= f.text_area :introduction, placeholder:"自己紹介:好きなコンテンツや語りたい事を入力しましょう。", class: "user__textbox_bigbody" %>
          </div>
        </div>
          <div class="botton__position">
            <div class="button__panel">
              <%= f.submit "Update User",class: "button"  %>
            </div>
          </div>
      <% end %>
  </section>
</article>