<main>
  <div class="">
    <div class="">
      <div class="">
        <h2>User info</h2>
          <%= form_with model:@user, local:true do |f| %>
            <div class="form-group">
              <label for="inputName">Name</label>
                <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control name" %>
            </div>
            <div class="form-group">
              <label for="user_image">Image</label>
              <%= f.attachment_field :icon, placeholder: "プロフィール画像", class: "form-control-file user_image" %>
            </div>
            <div class="form-group">
              <label for="user_introduction">Introduction</label>
              <%= f.text_area :introduction, class: "form-control introduction" %>
            </div>
            <div class="form-group">
              <%= f.submit "Update User",class: "btn btn-secondary"  %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</main>
