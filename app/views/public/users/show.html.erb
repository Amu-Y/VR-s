<header class="contents__header">
  <%= render 'layouts/header' %>
</header>
<article class="user">
  <section class="user__content">
    <h1>
      User page
      </h1>
        <div>
          <%= attachment_image_tag @user, :icon, :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg", class: "icon__body_mypage" %>
        </div>
        <%= @user.receive_favarites_count %>
        <h4>
          name
          </h4>
          <p><%= @user.name %></p>
        <h4>
          introduction
          </h4>
          <p><%= @user.introduction %></p>
        <div>
          <% if user_signed_in? %>
          <%= link_to "edit", edit_user_path(@user) %>
          <% else %>
          <% end %>
        </div>
  </section>
</article>
