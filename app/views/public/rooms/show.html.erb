<div class="room__messages_container">
  <div class="room__header">
    <b class="room__header_name">
      <%= @room.genre.name %>:<%= @room.name %>
      </b>
  </div>
  <%= render 'public/rooms/messages', messages: @messages %>
</div>
  <!-- テキストボックス、送信ボタン④ -->
  <%= form_with model: @message, local: true do |f| %>
    <div class="room__send">
      <%= f.attachment_field :image, class: "room__image_box" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.text_field :body, placeholder: "メッセージを入力して下さい" , class:"room__send_message" %>
      <%= f.submit "投稿",class: 'room__send_btn'%>
    </div>
  <% end %>