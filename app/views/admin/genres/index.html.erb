<header class="contents__header">
  <%= render 'layouts/header' %>
</header>
<article class="rooms">
  <section class="rooms__text">
    <h1 class="rooms__text_title">
      Genre create&list
      </h1>
      <%= form_with model: [:admin, @genre], local:true do |f| %>
        <%= f.text_field :name, placeholder: "作成するジャンル名", size: "30", class:"user__textbox_body" %>
          <div class="botton__position">
            <div class="button__panel">
               <%= f.submit 'create', class: "button" %>
            </div>
          </div>
      <% end %>
          <table class="table__position">
            <thead>
              <tr>
                <th>ジャンル名</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to edit_admin_genre_path(genre.id), class: "text-dark" do %><i class="fas fa-edit"></i><% end %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        <%= paginate @genres %>
  </section>
</article>
