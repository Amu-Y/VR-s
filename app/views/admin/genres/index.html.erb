<header class="contents__header">
  <%= render 'layouts/header' %>
</header>
<article class="rooms">
  <section class="rooms__text">
    <h1 class="rooms__text_title">
      Genre create&list
      </h1>
      <%= form_with model: [:admin, @genre], local:true do |f| %>
        <%= f.text_field :name, placeholder: "ジャンル名", size: "30", class: "form-control mr-3" %>
        <%= f.submit '　新規登録　', class: "btn  btn-sm btn-secondary" %>
      <% end %>
        <% @genres.each do |genre| %>
          <table class="table__position">
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to edit_admin_genre_path(genre.id), class: "text-dark" do %><i class="fas fa-edit"></i><% end %></td>
            </tr>
          </table>
        <% end %>
        <%= paginate @genres %>
  </section>
</article>
